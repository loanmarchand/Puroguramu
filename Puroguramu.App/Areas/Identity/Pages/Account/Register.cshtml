@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}


<div class="flex justify-center items-center min-h-screen">
    <div class="w-full max-w-md">
        <section class="bg-white shadow-md  border rounded px-8 pt-6 pb-8 mb-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-4">
                <h2 class="text-lg font-semibold text-center">Créer un compte</h2>
                <hr class="my-2" />
                <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input asp-for="Input.Email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-red-500 text-xs"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Matricule" class="block text-sm font-medium text-gray-700">Matricule</label>
                    <input asp-for="Input.Matricule" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Matricule" class="text-red-500 text-xs"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Nom" class="block text-sm font-medium text-gray-700">Nom</label>
                    <input asp-for="Input.Nom" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Nom" class="text-red-500 text-xs"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Prenom" class="block text-sm font-medium text-gray-700">Prénom</label>
                    <input asp-for="Input.Prenom" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Prenom" class="text-red-500 text-xs"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Groupe" class="block text-sm font-medium text-gray-700">Groupe</label>
                    <input asp-for="Input.Groupe" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Groupe" class="text-red-500 text-xs"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input asp-for="Input.Password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-xs"></span>
                </div>
                <div class="flex justify-center">
                    <button id="registerSubmit" type="submit" class="mt-2 w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Register</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
