<!DOCTYPE html>
<html lang="fr" class="h-full">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="icon" href="images/icon.png"/>
    <title>@ViewData["Title"] - Purogumaru</title>
    <link rel="stylesheet" href="~/css/output.css"/>
</head>
<body class="flex flex-col h-full">
<header class="bg-gray-100">
    <!-- Navbar améliorée -->
    <nav class="flex items-center justify-between flex-wrap bg-teal-500 p-6">
        <a href="/" class="flex items-center flex-shrink-0 text-white mr-6">
            <img src="~/images/helmo.png" alt="Logo" class="h-8 w-8 mr-2">
            <span class="font-semibold text-xl tracking-tight">Purogumaru</span> <!-- Titre visible -->
        </a>
        <div class="block lg:hidden">
            <button class="flex items-center px-3 py-2 border rounded text-teal-200 border-teal-400 hover:text-white hover:border-white">
                <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
            </button>
        </div>
        <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
            <div class="text-sm lg:flex-grow">
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<main class="flex-grow container mx-auto px-4">
    @RenderBody()
</main>

<footer class="bg-gray-200 text-center lg:text-left text-gray-600 py-4">
    <div class="container mx-auto px-4">
        <div class="mt-2">
            © 2024 Purogumaru. Tous droits réservés.
        </div>
    </div>
</footer>

<script src="https://cdn.tailwindcss.com"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
