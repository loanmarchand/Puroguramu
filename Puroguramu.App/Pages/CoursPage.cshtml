@page
@model Puroguramu.App.Pages.CoursPage
@{
    Layout = "_Layout";
    ViewData["Title"] = "Accueil";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold text-center mb-6">Cours</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6">
        @foreach (var cours in Model.Cours)
        {
            <a href="@Url.Page("/DashBoard", new { titreCours = cours.Titre })" class="block overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 ease-in-out flex flex-col">
                <div class="flex-shrink-0">
                    <img src="@cours.ImageUrl" alt="Image du cours" class="w-full object-cover max-h-48" />
                </div>
                <div class="p-4 bg-white flex-grow">
                    <h2 class="text-xl font-semibold text-center">@cours.Titre</h2>
                </div>
            </a>
        }

    </div>
    
</div>
